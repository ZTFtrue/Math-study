\begin_inset Formula 
\[
f_{X,Y}(x,y)=\frac{\partial^{2}}{\partial x\,\partial y}F(x,y)
\]

\end_inset


\end_layout

\begin_layout Itemize
从联合密度 
\begin_inset Formula $f_{X,Y}(x,y)$
\end_inset

