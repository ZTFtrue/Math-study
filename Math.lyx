\[
f(x)=f(x_{0})+\frac{f'(x_{0})}{1!}(x-x_{0})+\frac{f''(x_{0})}{2!}(x-x_{0})^{2}+\cdots+\frac{f^{\{n\}}(x_{0})}{n!}(x-x_{0})^{n}+\cdots
\]

\end_inset

