\series medium
\shape up
\size normal
\emph off
\nospellcheck off
\bar no
\strikeout off
\xout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $(1-n)Q(x)$
\end_inset

看作
\begin_inset Formula $Q(x)$
\end_inset

。

\end_layout

\begin_layout Example
\begin_inset Formula $y'+\frac{1}{x}y=(\ln x)y^{2}$
\end_inset

,求
\begin_inset Formula $y$
\end_inset


\end_layout

\begin_layout Example
设：

\begin_inset Formula $z=y^{1-2}=y^{-1}$
\end_inset


\end_layout

\begin_layout Example
对两边求导：

\end_layout

\begin_layout Example
\begin_inset Formula $\frac{dz}{dx}=-y^{-2}\frac{dy}{dx}=-\frac{1}{y^{2}}y'$
\end_inset


\end_layout

\begin_layout Example
整理得：

\begin_inset Formula $y'=-y^{2}\frac{dz}{dx}$
\end_inset


\end_layout

\begin_layout Example
将
\begin_inset Formula $\ensuremath{y'}$
\end_inset

代入原方程：

\end_layout

\begin_layout Example
\begin_inset Formula $-y^{2}\frac{dz}{dx}+\frac{1}{x}y=(\ln x)y^{2}$
\end_inset


\end_layout

\begin_layout Example
两边同时除以
\begin_inset Formula $y^{2}$
\end_inset

：

\end_layout

\begin_layout Example
\begin_inset Formula $-\frac{dz}{dx}+\frac{1}{x}\frac{1}{y}=\ln x$
\end_inset


\end_layout

\begin_layout Example
由于
\begin_inset Formula $\frac{1}{y}=z$
\end_inset

，
代入：

\end_layout

\begin_layout Example
\begin_inset Formula $-\frac{dz}{dx}+\frac{1}{x}z=\ln x$
\end_inset


\end_layout

\begin_layout Example
整理：

\end_layout

\begin_layout Example
\begin_inset Formula $\frac{dz}{dx}-\frac{1}{x}z=-\ln x$
\end_inset


\end_layout

\begin_layout Example
\begin_inset Formula $\mu(x)=e^{\int P(x)dx}=e^{\int-\frac{1}{x}dx}=e^{-\ln x}=\frac{1}{x}$
\end_inset


\end_layout

\begin_layout Example
两边乘以积分因子
\begin_inset Formula $\frac{1}{x}$
\end_inset

：

\end_layout

\begin_layout Example
\begin_inset Formula $\frac{1}{x}\frac{dz}{dx}-\frac{1}{x^{2}}z=-\frac{\ln x}{x}$
\end_inset


\end_layout

\begin_layout Example
左边是乘积求导公式：

\end_layout

\begin_layout Example
\begin_inset Formula $\frac{d}{dx}\left(\frac{z}{x}\right)=-\frac{\ln x}{x}$
\end_inset


\end_layout

\begin_layout Example
\begin_inset Formula $\frac{z}{x}=-\int\frac{\ln x}{x}dx$
\end_inset


\end_layout

\begin_layout Example
利用分部积分：

\end_layout

\begin_layout Example
设
\begin_inset Formula $u=\ln x$
\end_inset

，

\begin_inset Formula $dv=\frac{dx}{x}$
\end_inset

，
则：

\begin_inset Formula $du=\frac{dx}{x},\quad v=\ln x$
\end_inset


\end_layout

\begin_layout Example
\begin_inset Formula $\int\ln x\frac{dx}{x}=\frac{(\ln x)^{2}}{2}$
\end_inset


\end_layout

\begin_layout Example
所以：

\begin_inset Formula $\frac{z}{x}=-\frac{(\ln x)^{2}}{2}+C$
\end_inset


\end_layout

\begin_layout Example
\begin_inset Formula $z=x\left(-\frac{(\ln x)^{2}}{2}+C\right)$
\end_inset


\end_layout

\begin_layout Example
由于
\begin_inset Formula $z=y^{-1}$
\end_inset

，
即：

\end_layout

\begin_layout Example
\begin_inset Formula $y=\frac{1}{z}=\frac{1}{x\left(-\frac{(\ln x)^{2}}{2}+C\right)}$
\end_inset


\end_layout

\begin_layout Example
其中 
\begin_inset Formula $\ensuremath{C}$
\end_inset

是积分常数。

\end_layout

\begin_layout Section
高阶线性微分方程
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
y''+P(x)y'+Q(x)y=f(x)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
叫做二阶微分方程.
\end_layout

\begin_layout Standard
右端
\begin_inset Formula $f(x)=0$
\end_inset

时,
 方程叫做齐次的;
 当
\begin_inset Formula $f(x)\neq0$
\end_inset

时,
 方程叫做非齐次的.
