\begin_inset Formula $\frac{d^{n}}{dx^{n}}(Cu)=C\frac{d^{n}}{dx^{n}}u$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\frac{d^{n}}{dx^{n}}(u\cdot v)=\sum_{k=0}^{n}C_{k}^{n}\frac{d^{n-k}}{dx^{n-k}}u\frac{d^{k}}{dx^{k}}v$
\end_inset

